     <!-- Feature Start -->
 <div class="container-fluid py-5  ">
    <div class="container ">
        <div class="row g-5">
            <div class="col-md-6 col-lg-3 wow fadeIn" data-wow-delay="0.1s">
                <div class="d-flex align-items-center justify-content-between mb-2">
                    <div class="d-flex align-items-center justify-content-center bg-light" style="width: 60px; height: 60px;">
                        <i class="fa fa-lightbulb fa-2x text-secondary"></i>
                    </div>
                    <h1 class="display-1 text-light mb-0">01</h1>
                </div>
                <h5 class="text-dark">Creativeness</h5>
            </div>
            <div class="col-md-6 col-lg-3 wow fadeIn" data-wow-delay="0.3s">
                <div class="d-flex align-items-center justify-content-between mb-2">
                    <div class="d-flex align-items-center justify-content-center bg-light" style="width: 60px; height: 60px;">
                        <i class="fa fa-check fa-2x text-secondary"></i>
                    </div>
                    <h1 class="display-1 text-light mb-0">02</h1>
                </div>
                <h5 class="text-dark">Reliable Standards</h5>
            </div>
            <div class="col-md-6 col-lg-3 wow fadeIn" data-wow-delay="0.5s">
                <div class="d-flex align-items-center justify-content-between mb-2">
                    <div class="d-flex align-items-center justify-content-center bg-light" style="width: 60px; height: 60px;">
                        <i class="fa fa-tools fa-2x text-secondary"></i>
                    </div>
                    <h1 class="display-1 text-light mb-0">03</h1>
                </div>
                <h5 class="text-dark">Great Expertise</h5>
            </div>
            <div class="col-md-6 col-lg-3 wow fadeIn" data-wow-delay="0.7s">
                <div class="d-flex align-items-center justify-content-between mb-2">
                    <div class="d-flex align-items-center justify-content-center bg-light" style="width: 60px; height: 60px;">
                        <i class="fa fa-smile fa-2x text-secondary"></i>
                    </div>
                    <h1 class="display-1 text-light mb-0">04</h1>
                </div>
                <h5 class="text-dark">Satisfied Customers</h5>
            </div>
        </div>
    </div>
</div>
<!-- Feature Start -->


    <!-- Booking Start -->
    <div class="container-fluid my-5 px-0">
        <div class="img" data-wow-delay="0.1s">
            <h1 class="text-white mb-4">Book For A Services</h1>
            <!-- <h3 class="text-white mb-0">24 Hours 7 Days a Week</h3> -->
        </div>
        <div class="container position-relative wow fadeInUp" data-wow-delay="0.1s" style="margin-top: -6rem;">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="bg-light text-center p-5">
                        <h1 class="mb-4">Book A Service</h1>
                        <form method="post" action="/booking">
    <div class="row g-3">
        <div class="col-12 col-sm-6">
            <input type="text" class="form-control border-0" name="name" placeholder="Your Name" required style="height: 55px;">
        </div>
        <div class="col-12 col-sm-6">
            <input type="tel" class="form-control border-0" name="phone" placeholder="Phone Number" required style="height: 55px;">
        </div>
        <div class="col-12 col-sm-6">
            <input type="email" class="form-control border-0" name="email" placeholder="Your Email" required style="height: 55px;">
        </div>
        <div class="col-12 col-sm-6">
            <input type="text" class="form-control border-0" name="location" placeholder="Location" required style="height: 55px;">
        </div>
        <div class="col-12 col-sm-6">
            <input type="date" class="form-control border-0" name="serviceDate" placeholder="Service Date" required style="height: 55px;">
        </div>
        <div class="col-12 col-sm-6">
    <select class="form-select border-0" name="serviceType" required style="height: 55px;">
        <option selected disabled>Select A Service</option>
        
        <!-- Electrical Services -->
        <optgroup label="Electrical">
            <option value="Power Backup Installation">Power Backup Installation</option>
            <option value="Wiring Repair">Wiring Repair</option>
            <option value="Outlet Installation">Outlet Installation</option>
            <option value="Electrical Panel Upgrade">Electrical Panel Upgrade</option>
            <option value="EV Charger Installation">EV Charger Installation</option>
        </optgroup>

        <!-- Plumbing Services -->
        <optgroup label="Plumbing">
            <option value="Leak Repair">Leak Repair</option>
            <option value="Drain Cleaning">Drain Cleaning</option>
            <option value="Pipe Installation">Pipe Installation</option>
            <option value="Water Heater Repair">Water Heater Repair</option>
            <option value="Sewer Line Repair">Sewer Line Repair</option>
        </optgroup>

        <!-- Carpentry Services -->
        <optgroup label="Carpentry">
            <option value="Furniture Assembly">Furniture Assembly</option>
            <option value="Cabinet Installation">Cabinet Installation</option>
            <option value="Door Repair">Door Repair</option>
            <option value="Wood Floor Installation">Wood Floor Installation</option>
            <option value="Deck Construction">Deck Construction</option>
        </optgroup>

    </select>
</div>

        <div class="col-12">
            <textarea class="form-control border-0" name="specialRequest" placeholder="Special Request"></textarea>
        </div>
        <div class="col-12">
            <button class="btn btn-primary w-100 py-3 rounded-pill" type="submit">Book Now</button>
        </div>
    </div>
</form>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Booking End -->
        



      {{> footer}}
   
</body>

