            class="dpicn"
            alt="dp"
            onclick="showProfile()"
            id="showProfile"
          />
         
          <div class="profile" id="profile">
            
              <ul>
                <li>
                  <i class="fa-regular fa-circle-user"></i>
                  <a href="">Proflie Settings</a>
                </li>
                 <li>
                  <i class="fa-solid fa-right-from-bracket fa-rotate-180"></i>
                  <a href="">Logout</a>
