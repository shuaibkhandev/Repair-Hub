    <title>Edit Technician</title>
    <link rel="stylesheet" href="/css/dashboard.css" />
  </head>

  <body>

    <div class="dashboard-wrapper">
    <!-- for header part -->
   {{>dashboardHeader}}

    <div class="main-container">
     {{>dashboardSidebar}}
      <div class="main">

     

          <h2>Edit Technician</h2>
<form action="/api/technicians/edit/{{technician._id}}?_method=PUT" method="POST" enctype="multipart/form-data">
  <input type="text" name="name" value="{{technician.name}}" required /><br>
  <input type="text" name="expertise" value="{{technician.expertise}}" required /><br>
  <input type="number" name="experience" value="{{technician.experience}}" required /><br>
  <p>Current Photo:</p>
  <img src="/{{technician.photoUrl}}" width="100" /><br>
  <input type="file" name="photo" /><br>
  <button type="submit">Update</button>
</form>
<a href="/dashboard/technicians">‚Üê Back</a>
      </div>
    </div>

</div>

 
     <script src="../js/dashboard/script.js"></script>
  </body>
</html>