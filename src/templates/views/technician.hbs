






<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, 
                   initial-scale=1.0"
    />
    <title>Technicians</title>
    <link rel="stylesheet" href="../css/dashboard.css" />
  </head>

  <body>
    <div class="dashboard-wrapper">
    <!-- for header part -->
   {{>dashboardHeader}}

    <div class="main-container">
     {{>dashboardSidebar}}
      <div class="main">

   

        <h1>Our Expert Technicians</h1>
<a href="/dashboard/addtechnician">+ Add Technician</a>
<table border="1">
  <tr>
    <th>Photo</th>
    <th>Name</th>
    <th>Expertise</th>
    <th>Experience (yrs)</th>
    <th>Actions</th>
  </tr>
  {{#each technicians}}
  <tr>
    <td><img src="/{{this.photoUrl}}" width="80" /></td>
    <td>{{this.name}}</td>
    <td>{{this.expertise}}</td>
    <td>{{this.experience}}</td>
    <td>
      <a href="/dashboard/edit/{{this._id}}">Edit</a>
      <form method="POST" action="/dashboard/delete/{{this._id}}?_method=DELETE" style="display:inline;">
        <button type="submit" onclick="return confirm('Delete this technician?')">Delete</button>
      </form>
    </td>
  </tr>
  {{/each}}
</table>

      </div>
    </div>

</div>

 
     <script src="../js/dashboard/script.js"></script>
  </body>
</html>